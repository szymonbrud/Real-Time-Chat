{
  "name": "real-time-chat",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/szymonqqaz/Real-Time-Chat.git",
  "author": "szymonqqaz <szymonqqaz22@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd server && yarn test:nw && lint-staged",
      "pre-push": "cd server && yarn test:nw && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "cd server",
      "eslint . --fix",
      "cd ..",
      "git add ."
    ]
  }
}